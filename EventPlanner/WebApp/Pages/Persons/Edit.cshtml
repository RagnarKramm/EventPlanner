@page
@model WebApp.Pages.Persons.EditModel

@{
    ViewData["Title"] = "Muuda";
}

<h1>Muuda andmeid</h1>

<h4>Eraisik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Person!.FirstName" class="control-label"></label>
                <input asp-for="Person!.FirstName" class="form-control" />
                <span asp-validation-for="Person!.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person!.LastName" class="control-label"></label>
                <input asp-for="Person!.LastName" class="form-control" />
                <span asp-validation-for="Person!.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person!.IdCode" class="control-label"></label>
                <input asp-for="Person!.IdCode" class="form-control" />
                <span asp-validation-for="Person!.IdCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person!.AdditionalInfo" class="control-label"></label>
                <input asp-for="Person!.AdditionalInfo" class="form-control" />
                <span asp-validation-for="Person!.AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person!.PaymentOptionId" class="control-label"></label>
                <select asp-for="Person!.PaymentOptionId" class ="form-control" asp-items="@Model.PaymentOptionsSelectList"></select>
            </div>
            <input type="hidden" asp-for="Person!.Id" />
            <input type="hidden" asp-for="Person!.ParticipantCount"/>
            <input type="hidden" asp-for="Person!.EventId"/>
            <div class="form-group">
                <input type="submit" value="Salvesta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-page="./Details" asp-route-id="@Model.Person!.Id">Tagasi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
