@page
@model WebApp.Pages.Persons.DeleteModel

@{
    ViewData["Title"] = "Kustuta";
}

<h1>Kustuta Ã¼rituselt @Model.Person!.Event!.Name</h1>

<h3>Kas oled kindel, et tahad eraisiku '@Model.Person!.FirstName @Model.Person!.LastName' kustutada?</h3>
<div>
    <br/>
    <h4>Eraisik</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person!.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person!.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person!.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person!.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person!.IdCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person!.IdCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person!.AdditionalInfo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Person!.AdditionalInfo == null)
            {
                <p>Puudub!</p>
            }
            else
            {
                @Html.DisplayFor(model => model.Person!.AdditionalInfo)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person!.PaymentOptionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person!.PaymentOption!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person!.EventId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person!.Event!.Name)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Person!.Id"/>
        <input type="hidden" asp-for="Person!.EventId"/>
        <a class="btn btn-outline-dark" asp-route-id="@Model.Person!.EventId" asp-page="/Events/Details">Tagasi</a>
        <input type="submit" value="Kustuta" class="btn btn-danger"/>
    </form>
</div>