@page
@model WebApp.Pages.Participants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].ParticipantLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].ParticipantLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].ParticipantLine3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].AdditionalInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].ParticipantType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant![0].PaymentOption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Participant!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantLine3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantType!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentOption!.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
