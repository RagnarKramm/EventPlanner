@page
@model WebApp.Pages.Businesses.DeleteModel

@{
    ViewData["Title"] = "Kustuta";
}

<h1>Kustuta ürituselt @Model.Business!.Event!.Name</h1>

<h3>Kas oled kindel, et tahad juriidilise isiku '@Model.Business!.BusinessName' kustutada?</h3>
<div>
    <br/>
    <h4>Ettevõte</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Business!.BusinessName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Business!.BusinessName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Business!.RegisterCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Business!.RegisterCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Business!.AdditionalInfo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Business!.AdditionalInfo == null)
            {
                <p>Puudub!</p>
            }
            else
            {
                @Html.DisplayFor(model => model.Business!.AdditionalInfo)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Business!.ParticipantCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Business!.ParticipantCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Business!.PaymentOptionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Business!.PaymentOption!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Business!.EventId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Business!.Event!.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Business!.Id"/>
        <a class="btn btn-outline-dark" asp-route-id="@Model.Business!.EventId" asp-page="/Events/Details">Tagasi</a>
        <input type="submit" value="Kustuta" class="btn btn-danger"/>
    </form>
</div>
